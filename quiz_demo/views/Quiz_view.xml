<odoo>
    <!-- Quiz Form View -->
    <record id="view_quiz_form" model="ir.ui.view">
        <field name="name">quiz.form</field>
        <field name="model">quiz</field>
        <field name="arch" type="xml">
            <form string="Quiz">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="description"/>
                        <field name="passing_percentage"/>
                    </group>
                    <group>
                        <field name="question_ids">
                            <tree string="Questions">
                                <field name="content"/>
                            </tree>
                            <form string="Question">
                                <sheet>
                                    <group>
                                        <field name="content"/>
                                        <field name="answer_ids">
                                            <tree string="Answers">
                                                <field name="content"/>
                                                <field name="is_correct"/>
                                            </tree>
                                        </field>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Quiz Tree View -->
    <record id="view_quiz_tree" model="ir.ui.view">
        <field name="name">quiz.tree</field>
        <field name="model">quiz</field>
        <field name="arch" type="xml">
            <tree string="Quiz">
                <field name="title"/>
                <field name="passing_percentage"/>
            </tree>
        </field>
    </record>

    <!-- Quiz Action -->
    <record id="action_quiz" model="ir.actions.act_window">
        <field name="name">Quiz</field>
        <field name="res_model">quiz</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_quiz_tree"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_quiz" name="Quizzes" action="action_quiz"/>
</odoo>